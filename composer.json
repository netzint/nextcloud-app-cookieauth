    "description": "JWT Cookie Authentication for Nextcloud",
    "type": "nextcloud-app",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Netzint GmbH",
            "email": "dennis.boelling@netzint.de"
        }
    ],
    "require": {
        "php": ">=8.1"
