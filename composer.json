{
    "name": "netzint/nextcloud-app-cookieauth",
    "description": "Nextcloud app for automatic SSO via JWT cookie authentication",
    "type": "nextcloud-app",
    "license": "AGPL-3.0-or-later",
    "keywords": [
        "nextcloud",
        "sso",
        "jwt",
        "keycloak",
        "authentication",
        "cookie"
    ],
    "homepage": "https://github.com/netzint/nextcloud-app-cookieauth",
    "authors": [
        {
            "name": "Netzint GmbH",
            "email": "dennis.boelling@netzint.de",
            "homepage": "https://netzint.de"
        }
    ],
    "support": {
        "issues": "https://github.com/netzint/nextcloud-app-cookieauth/issues",
        "source": "https://github.com/netzint/nextcloud-app-cookieauth"
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "nextcloud/ocp": "^25 || ^26 || ^27 || ^28 || ^29 || ^30 || ^31 || ^32"
    },
    "autoload": {
        "psr-4": {
            "OCA\\CookieAuth\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OCA\\CookieAuth\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
